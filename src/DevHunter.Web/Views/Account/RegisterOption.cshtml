<div id="register-option-container">
	<header class="section-header">
		<h2>Join us as client or freelancer</h2>
	</header>
	<section class="section-register-option">
		<div class="option-company radio-btn">
			<input type="radio" name="company" />
			<div class="option-svg-icon">
				<img src="~/svgs/company.svg" alt="" />
			</div>
			<h4 class="option-title">I'm a client, hiring for a project</h4>
			<div class="background-circle"></div>
			<svg class="custom-vector" width="192" height="193" viewBox="0 0 192 193" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M0.729874 1L0.729863 265M37.2241 1L37.2241 265M72.2586 1L72.2586 265M108.753 1L108.753 265M145.247 1L145.247 265M181.741 1L181.741 265M216.776 1L216.776 265M253.27 1L253.27 265M254 1.00002L0 1M254 38.7143L0 38.7143M254 76.4286L0 76.4286M254 114.143L0 114.143M254 151.857L0 151.857M254 189.571L0 189.571M254 227.286L0 227.286M254 265L0 265" stroke="url(#paint0_radial_0_1058)" stroke-width="0.35"></path>
				<defs>
					<radialGradient id="paint0_radial_0_1058" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(127 133) rotate(90) scale(132 127)">
						<stop stop-color="#004DFF"></stop>
						<stop offset="1" stop-color="#000614"></stop>
					</radialGradient>
				</defs>
			</svg>
			<div class="custom-vector-background"></div>
		</div>
		<div class="option-client radio-btn">
			<input type="radio" name="freelancer" />
			<div class="option-svg-icon">
				<img src="~/svgs/freelancer.svg" alt="" />
			</div>
			<h4 class="option-title">I'm a freelancer, looking for work</h4>
			<div class="background-circle"></div>
			<svg class="custom-vector" width="192" height="193" viewBox="0 0 192 193" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M0.729874 1L0.729863 265M37.2241 1L37.2241 265M72.2586 1L72.2586 265M108.753 1L108.753 265M145.247 1L145.247 265M181.741 1L181.741 265M216.776 1L216.776 265M253.27 1L253.27 265M254 1.00002L0 1M254 38.7143L0 38.7143M254 76.4286L0 76.4286M254 114.143L0 114.143M254 151.857L0 151.857M254 189.571L0 189.571M254 227.286L0 227.286M254 265L0 265" stroke="url(#paint0_radial_0_1058)" stroke-width="0.35"></path>
				<defs>
					<radialGradient id="paint0_radial_0_1058" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(127 133) rotate(90) scale(132 127)">
						<stop stop-color="#004DFF"></stop>
						<stop offset="1" stop-color="#000614"></stop>
					</radialGradient>
				</defs>
			</svg>
			<div class="custom-vector-background"></div>
		</div>
	</section>
	<div class="section-footer">
		<div class="create-btn-container">
			<a asp-area="" asp-controller="Account" asp-action="" class="create-btn">Create Account</a>
		</div>
		<p>Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login" class="cta-link">Log in</a></p>
	</div>
</div>

@section Scripts {
	<script src="~/js/login-register-bg-rm.js"></script>
	<script src="~/js/register-option.js"></script>
}