@model IEnumerable<DevHunter.Web.ViewModels.Company.CompanyAdminViewModel>

<div class="outside-wrapper">
	<div class="table-container">
		<header class="table-heading">
			<h1>Companies</h1>
			<p>Look all of registered companies.</p>
		</header>
		<main class="table-content">
			<div class="table-head">
				<div class="column-title title">Company Name</div>
				<div class="column-title email">CEO Name</div>
				<div class="column-title status">Offers count</div>
			</div>
			<div class="table-body">
				@foreach (var company in Model)
				{
					<div class="data-row">
						<div class="title">
							<a asp-area="" asp-controller="Company" asp-action="Detail" asp-route-id="@company.Id">
								@company.Name
							</a>
						</div>
						<div class="email">@company.CEO</div>
						<div class="column-title status">@company.OffersCnt</div>
					</div>
				}
			</div>
		</main>
		@* <footer class="custom-pagination">
		<!--        <a href="#" class="direction prev"><</a>-->
		<a href="#" class="current first">1</a>
		<a href="#" class="last">2</a>
		<a href="#" class="direction next">></a>
		</footer> *@
	</div>
</div>

@section Styles {
	<link href="~/css/job-offer-crud-table/styles.css" rel="stylesheet" />
	<link href="~/css/job-offer-crud-table/custom-pagination.css" rel="stylesheet" />
